    <div class="container mt-5">
        <div class="d-flex justify-content-end"> 
            <div>
                <a href="/admin/adduser"><button type="button" class="btn btn-success">Add User</button></a>
            </div>
        </div>
        
      
      <table id="table" class="table mt-5 table-hover table-light" >
        <thead>
          <tr>
            <th class="col-3 col-md-3 col-lg-3 col-xl-1 text-center">Sl.No</th>
            <th class="col-3 col-md-3 col-lg-3 col-xl-3 text-center">Name</th>
            <th class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">Email</th>
            <th class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">Option</th>
          </tr>
        </thead>
        <tbody>
          <% allUsers.forEach((allUsers,index)=>{ %>
          <tr>
            <td class="col-3 col-md-3 col-lg-3 col-xl-1 text-center"><%= index + 1 %></td>
            <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
              <%= allUsers.name %>
            </td>
            <td class="col-3 col-md-3 col-lg-3 col-xl-2 text-center">
              <%= allUsers.email %>
            </td>
            <td class="col-3 col-md-3 col-lg-3 col-xl-6 text-center">
              <a href="/admin/editUser/<%= allUsers._id %>"
                ><button type="button" class="btn btn-info">Edit</button></a
              >
              <a href="/admin/deleteuser/<%= allUsers._id %>" 
                ><button type="button" class="btn btn-danger" onclick="return confirm('are you sure <%= allUsers.name %>')">Delete</button></a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      
